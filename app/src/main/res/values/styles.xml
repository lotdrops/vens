<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--    DIALOGS-->
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <!--    WIDGETS-->
    <style name="RoundedButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/vag_rounded_std_bold</item>
    </style>

    <!--    TEXT STYLES-->
    <!--    Base    -->
    <style name="BaseTitleStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/vag_rounded_std_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onBackground</item>
    </style>

    <style name="BaseBodyStyle" parent="android:Widget.Material.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Custom.Title" parent="BaseTitleStyle">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Subtitle" parent="BaseTitleStyle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Body" parent="BaseBodyStyle">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>

    <!--    Filter    -->
    <style name="TextAppearance.Custom.FilterElement" parent="BaseBodyStyle">
        <item name="android:textColor">@color/selectable_text</item>
        <item name="android:textSize">@dimen/filter_text_size</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <!--    Map card    -->
    <style name="TextAppearance.Custom.MapCardTitle" parent="BaseTitleStyle">
        <item name="android:textSize">@dimen/map_card_title</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextAppearance.Custom.MapCardDescription" parent="BaseBodyStyle">
        <item name="android:textSize">@dimen/map_card_description</item>
        <item name="android:textColor">@color/unselected_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--    List Card    -->
    <style name="TextAppearance.Custom.ListCardTitle" parent="BaseTitleStyle">
        <item name="android:textSize">@dimen/list_card_title</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="TextAppearance.Custom.ListCardDescription" parent="BaseBodyStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/list_card_description</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Custom.ListCardSecondaryText" parent="BaseBodyStyle">
        <item name="android:textSize">@dimen/list_card_description</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>
    <style name="TextAppearance.Custom.ListCardType" parent="BaseBodyStyle">
        <item name="android:textSize">@dimen/list_card_type</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>

    <!--    Detail Card    -->
    <style name="TextAppearance.Custom.DetailTitle" parent="BaseTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Custom.DetailSubTitle" parent="BaseTitleStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Custom.DetailMessage" parent="BaseBodyStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextAppearance.Custom.DetailDescription" parent="BaseBodyStyle">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Custom.DetailSecondaryText" parent="BaseBodyStyle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>
    <style name="TextAppearance.Custom.DetailType" parent="BaseBodyStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/unselected_text</item>
    </style>

</resources>
