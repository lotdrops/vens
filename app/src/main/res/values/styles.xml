<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyBaseTextViewStyle" parent="android:Widget.Material.TextView">
    </style>

    <style name="TextAppearance.Custom.Title" parent="MyBaseTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Body" parent="MyBaseTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/body_text</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="TextAppearance.Custom.Subtitle" parent="MyBaseTextViewStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/body_text</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="TextAppearance.Custom.ListItem.Title" parent="MyBaseTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.Custom.ListItem.Subtitle" parent="MyBaseTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/body_text</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
