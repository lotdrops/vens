<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="hackovid.vens.features.onboarding.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/nav_to_onboarding_fragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            app:destination="@id/onBoardingFragment"
            />
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/selectLoginFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/nav_to_gdpr"
            app:destination="@id/gdprFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/selectLoginFragment"
        android:name="hackovid.vens.features.login.SelectLoginFragment"
        tools:layout="@layout/fragment_select_login">
        <action
            android:id="@+id/nav_to_register_fragment"
            app:destination="@id/registerFragment">
            <argument
                android:name="externalLogin"
                android:defaultValue="false"
                app:argType="boolean"
                app:nullable="false" />
            <argument
                android:name="email"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="name"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="lastName"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
        </action>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="hackovid.vens.features.register.RegisterFragment"
        tools:layout="@layout/fragment_register"
        >
        <argument
            android:name="externalLogin"
            app:argType="boolean"
            app:nullable="false" />
        <argument
            android:name="email"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="name"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lastName"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/nav_to_select_store_fragment"
            app:destination="@id/selectStoreFragment"
            >
            <argument
                android:name="user"
                app:argType="hackovid.vens.common.data.login.User"
                />
        </action>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/selectStoreFragment"
        android:name="hackovid.vens.features.register.SelectStoreFragment"
        tools:layout="@layout/fragment_select_store"
        >
        <action
            android:id="@+id/nav_to_fill_store_info"
            app:destination="@id/fillStoreInfo">
            <argument
                android:name="storeId"
                app:argType="long"
                app:nullable="false" />
            <argument
                android:name="user"
                app:argType="hackovid.vens.common.data.login.User"
                />
        </action>
        <argument
            android:name="user"
            app:argType="hackovid.vens.common.data.login.User"
            />
    </fragment>

    <fragment
        android:id="@+id/fillStoreInfo"
        android:name="hackovid.vens.features.register.FillStoreInfoFragment"
        tools:layout="@layout/fragment_fill_store_info" >
        <argument
            android:name="storeId"
            app:argType="long"
            app:nullable="false" />
        <argument
            android:name="user"
            app:argType="hackovid.vens.common.data.login.User"
            />
        <action
            android:id="@+id/nav_to_locate_store_on_map"
            app:destination="@id/locateStoreOnMap"
                >
            <argument
                android:name="location"
                app:argType="com.google.android.gms.maps.model.LatLng"
                app:nullable="true" />
        </action>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
            android:id="@+id/locateStoreOnMap"
            android:name="hackovid.vens.features.register.LocateStoreOnMapFragment"
            tools:layout="@layout/fragment_locate_store_on_map">
        <argument
            android:name="location"
            app:argType="com.google.android.gms.maps.model.LatLng"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="hackovid.vens.features.login.LoginFragment"
        tools:layout="@layout/fragment_login"
        />

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="hackovid.vens.features.onboarding.ui.OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/nav_to_gdpr"
            app:destination="@id/gdprFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            />
    </fragment>

    <fragment
        android:id="@+id/gdprFragment"
        android:name="hackovid.vens.features.login.GdprFragment"
        tools:layout="@layout/fragment_gdpr"
        >
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/selectLoginFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/nav_to_terms_of_use"
            app:destination="@id/termsOfUseFragment"
            />
        <action
            android:id="@+id/nav_to_privacy_policy"
            app:destination="@id/privacyPolicyFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/termsOfUseFragment"
        android:name="hackovid.vens.features.login.TermsOfUseFragment"
        tools:layout="@layout/fragment_terms_of_use"
        />

    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="hackovid.vens.features.login.PrivacyPolicyFragment"
        tools:layout="@layout/fragment_privacy_policy"
        />

</navigation>
