<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="hackovid.vens.features.onboarding.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/nav_to_onboarding_fragment"
            app:destination="@id/onBoardingFragment"/>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/selectLoginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/selectLoginFragment"
        android:name="hackovid.vens.features.login.SelectLoginFragment"
        tools:layout="@layout/fragment_select_login">
        <action
            android:id="@+id/nav_to_register_fragment"
            app:destination="@id/registerFragment">
            <argument
                android:name="externalLogin"
                android:defaultValue="false"
                app:argType="boolean"
                app:nullable="false" />
            <argument
                android:name="email"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="name"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
            <argument
                android:name="lastName"
                android:defaultValue="null"
                app:argType="string"
                app:nullable="true" />
        </action>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="hackovid.vens.features.register.RegisterFragment"
        tools:layout="@layout/fragment_register"
        >
        <argument
            android:name="externalLogin"
            app:argType="boolean"
            app:nullable="false" />
        <argument
            android:name="email"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="name"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="lastName"
            android:defaultValue="null"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/nav_to_select_store_fragment"
            app:destination="@id/selectStoreFragment"/>
    </fragment>

    <fragment
        android:id="@+id/selectStoreFragment"
        android:name="hackovid.vens.features.register.SelectStoreFragment"
        tools:layout="@layout/fragment_select_store"
        >
        <action
            android:id="@+id/nav_to_fill_store_info"
            app:destination="@id/fillStoreInfo">
            <argument
                android:name="storeId"
                app:argType="long"
                app:nullable="false" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/fillStoreInfo"
        android:name="hackovid.vens.features.register.FillStoreInfoFragment"
        tools:layout="@layout/fragment_fill_store_info" >
        <argument
            android:name="storeId"
            app:argType="long"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="hackovid.vens.features.login.LoginFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="hackovid.vens.features.onboarding.ui.OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/selectLoginFragment"/>
    </fragment>

</navigation>
