<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="hackovid.vens.features.onboarding.ui.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/nav_to_onboarding_fragment"
            app:destination="@id/onBoardingFragment"/>
    </fragment>

    <fragment
        android:id="@+id/selectLoginFragment"
        android:name="hackovid.vens.features.login.SelectLoginFragment"
        tools:layout="@layout/fragment_select_login">
        <action
            android:id="@+id/nav_to_register_fragment"
            app:destination="@id/registerFragment"/>
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/loginFragment"/>
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="hackovid.vens.features.register.RegisterFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="hackovid.vens.features.login.LoginFragment"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="hackovid.vens.features.onboarding.ui.OnBoardingFragment"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/nav_to_login_fragment"
            app:destination="@id/selectLoginFragment"/>
    </fragment>

</navigation>
