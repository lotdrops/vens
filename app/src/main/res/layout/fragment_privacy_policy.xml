<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="viewModel" type="hackovid.vens.features.login.GdprViewModel" />
    </data>
    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal"
            android:background="@color/white"
            android:elevation="8dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:text="@string/gdpr_screen_privacy_title"
                style="@style/TextAppearance.Custom.Title"
                />

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/close_button_size"
                android:layout_height="@dimen/close_button_size"
                android:padding="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_close"
                android:tint="@color/dark_on_white"
                />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/terms_of_use"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:text="@string/privacy_screen_content"
                style="@style/TextAppearance.Custom.Body"
                />
        </ScrollView>


    </LinearLayout>

</layout>