<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="hackovid.vens.features.shopprofile.SlotsConfigViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                bind:buttonGravity="center_vertical"
                bind:navigationIcon="@drawable/ic_back_arrow"
                >

                <TextView
                    style="@style/TextAppearance.Custom.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/screen_horizontal_margin"
                    android:layout_marginVertical="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/shop_slots_config"
                    />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_slots_config_description"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:layout_marginVertical="16dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_info"
                style="@style/TextAppearance.Custom.Body"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:text="@string/shop_slots_config_note"
                android:checked="@{viewModel.noteEnabled}"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:text="@string/shop_slots_config_require_phone"
                android:checked="@{viewModel.requirePhoneEnabled}"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:text="@string/shop_slots_config_publish_status"
                android:checked="@{viewModel.publishStatusEnabled}"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="36dp"
                android:layout_marginVertical="8dp"
                android:text="@string/shop_slots_config_enable_button"
                android:layout_gravity="top|center"
                bind:cornerRadius="@dimen/button_corner_radius"
                style="@style/RoundedButton"
                android:visibility="@{viewModel.showEnableButton ? View.VISIBLE : View.GONE}"
                android:onClick="@{v -> viewModel.onEnableClicked()}"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="36dp"
                android:layout_marginVertical="8dp"
                android:text="@string/shop_slots_config_schedule_button"
                android:layout_gravity="top|center"
                bind:cornerRadius="@dimen/button_corner_radius"
                style="@style/RoundedButton"
                android:visibility="@{viewModel.showScheduleButton ? View.VISIBLE : View.GONE}"
                android:onClick="@{v -> viewModel.onScheduleClicked()}"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="36dp"
                android:layout_marginVertical="8dp"
                android:text="@string/shop_slots_config_update_button"
                android:layout_gravity="top|center"
                bind:cornerRadius="@dimen/button_corner_radius"
                style="@style/RoundedButton"
                android:visibility="@{viewModel.shopUpdateButton ? View.VISIBLE : View.GONE}"
                android:onClick="@{v -> viewModel.onUpdateClicked()}"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="36dp"
                android:layout_marginVertical="8dp"
                android:text="@string/shop_slots_config_disable_button"
                android:layout_gravity="top|center"
                bind:cornerRadius="@dimen/button_corner_radius"
                style="@style/RoundedButton"
                android:visibility="@{viewModel.showDisableButton ? View.VISIBLE : View.GONE}"
                android:onClick="@{v -> viewModel.onDisableClicked()}"
                />

        </LinearLayout>
    </ScrollView>
</layout>
