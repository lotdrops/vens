<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="hackovid.vens.features.shopprofile.ShopProfileViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp">

                <TextView
                    style="@style/TextAppearance.Custom.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/screen_horizontal_margin"
                    android:layout_marginVertical="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/shop_profile_title"
                    />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_enable_slots"
                android:paddingHorizontal="@dimen/screen_horizontal_margin"
                android:paddingVertical="16dp"
                style="@style/TextAppearance.ClickableElement"
                android:visibility="@{viewModel.slotsEnabled ? View.GONE : View.VISIBLE}"
                android:onClick="@{()-> viewModel.onEnableSlotsClicked()}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_pending_requests"
                android:paddingHorizontal="@dimen/screen_horizontal_margin"
                android:paddingVertical="16dp"
                style="@style/TextAppearance.ClickableElement"
                android:visibility="@{viewModel.slotsEnabled ? View.VISIBLE : View.GONE}"
                android:onClick="@{()-> viewModel.onPendingSlotsClicked()}"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_set_schedule_title"
                android:paddingHorizontal="@dimen/screen_horizontal_margin"
                android:paddingVertical="16dp"
                style="@style/TextAppearance.ClickableElement"
                android:onClick="@{()-> viewModel.onScheduleClicked()}"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="8dp"
                android:paddingVertical="16dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:background="@color/lightPurple"
                >
                <TextView
                    style="@style/TextAppearance.Custom.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.store.name}"
                    tools:text="Mary's meat"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:store_types="@{viewModel.store}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    style="@style/TextAppearance.Custom.DetailType"
                    tools:text="Alimentacio - Fruiteria"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.store.address}"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp"
                    android:textSize="15sp"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="Rambla de Catalunya 2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:store_phones="@{viewModel.store}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="612345789 - 987654321"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.store.web}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="https://www.qwertyuiopasdfghjklzxcvbnm.com/qwertyuiop"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.store.email}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="contact@store.com"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:store_accepts_orders="@{viewModel.store}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="@string/shop_accepts_orders"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:store_delivers="@{viewModel.store}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    tools:text="@string/shop_delivers"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/shop_schedule_title"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:textSize="15sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    style="@style/TextAppearance.Custom.DetailDescription"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.store.schedule}"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="24dp"
                    style="@style/TextAppearance.Custom.DetailType"
                    tools:text="M T W T F: 9:00 - 18:00"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mapFilterButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="36dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/shop_edit_details"
                    android:layout_gravity="top|center"
                    android:drawableStart="@drawable/ic_add_shopping_cart"
                    bind:cornerRadius="@dimen/button_corner_radius"
                    style="@style/RoundedButton"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/shop_data_not_public"
                android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                android:layout_marginVertical="16dp"
                android:drawableStart="@drawable/ic_warning"
                android:drawablePadding="8dp"
                style="@style/BaseBodyStyle"
                android:visibility="@{viewModel.slotsEnabled ? View.VISIBLE : View.GONE}"
                />


        </LinearLayout>
    </ScrollView>
</layout>
