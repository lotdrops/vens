<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="hackovid.vens.features.list.ListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    style="@style/TextAppearance.Custom.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="@dimen/screen_horizontal_margin"
                    android:layout_marginVertical="16dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@{viewModel.screenTitle}"
                    tools:text="@string/list_screen_title"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    android:onClick="@{v -> viewModel.onFavouritesClicked()}"
                    android:src="@{viewModel.onlyFavourites ? @drawable/ic_favorite_unselected : @drawable/ic_favorite_selected}" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_background"
            android:visibility="@{viewModel.showEmpty ? View.GONE : View.VISIBLE}" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder_no_favs"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}" />

        <TextView
            style="@style/TextAppearance.Custom.Subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center_horizontal"
            android:text="@{viewModel.emptyListTitle}"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}" />

        <TextView
            style="@style/TextAppearance.Custom.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="@{viewModel.emptyListSubtitle}"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="@{viewModel.showEmpty ? View.VISIBLE : View.GONE}" />
    </LinearLayout>
</layout>
