<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="viewModel" type="hackovid.vens.features.register.SelectStoreViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="Select your store"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.Custom.Title"
            />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/screen_title"
            />
        
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/search_view"
            app:layout_constraintBottom_toTopOf="@+id/infoLayout"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/infoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:elevation="8dp"
            android:layout_marginBottom="16dp"
            android:layout_margin="@dimen/map_info_margin"
            android:background="@drawable/map_info_background"
            android:visibility="@{viewModel.showStoreInfo ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toTopOf="@+id/select_store_button"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:text="@{viewModel.selectedStore.name}"
                tools:text="Bon SalmÃ³"
                style="@style/TextAppearance.Custom.MapCardTitle"
                bind:layout_constraintTop_toTopOf="parent"
                bind:layout_constraintEnd_toStartOf="@+id/map_favourite"
                bind:layout_constraintStart_toStartOf="parent"
                />
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="4dp"
                bind:store_types="@{viewModel.selectedStore}"
                style="@style/TextAppearance.Custom.MapCardDescription"
                bind:layout_constraintTop_toBottomOf="@+id/titleTextView"
                bind:layout_constraintEnd_toStartOf="@+id/map_favourite"
                bind:layout_constraintBottom_toBottomOf="@+id/map_separator"
                bind:layout_constraintStart_toStartOf="parent"
                tools:text="Grocery - Meat and pork"
                />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="4dp"
                bind:store_types="@{viewModel.selectedStore}"
                style="@style/TextAppearance.Custom.ListCardDescription"
                bind:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                bind:layout_constraintStart_toStartOf="parent"
                tools:text="Baker street 123"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/select_store_button"
            android:background="@drawable/purple_rounded_bg"
            android:gravity="center"
            android:text="Select store"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:onClick="@{view -> viewModel.onSelectStoreClicked()}"
            bind:cornerRadius="@dimen/login_button_corner_radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/infoLayout"
            app:layout_constraintEnd_toEndOf="@+id/infoLayout"
            style="@style/LoginActionButton"
            />

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
