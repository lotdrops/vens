<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="viewModel" type="hackovid.vens.features.register.SelectStoreViewModel" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
            android:layout_marginTop="24dp"
            android:text="@string/select_store_screen_title"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextAppearance.Custom.Title"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:paddingVertical="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="40dp"
            android:hint="@string/select_store_search_title"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:background="@drawable/bg_rounded_search_et"
            android:elevation="4dp"
            android:text="@={viewModel.query}"
            app:layout_constraintTop_toBottomOf="@id/screen_title"
            />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:padding="6dp"
            android:layout_marginEnd="8dp"
            android:visibility="@{viewModel.showClearQuery ? View.VISIBLE : View.INVISIBLE}"
            android:onClick="@{view -> viewModel.onClearQuery()}"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="@+id/search"
            app:layout_constraintBottom_toBottomOf="@+id/search"
            app:layout_constraintEnd_toEndOf="@+id/search"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/search"
            app:layout_constraintBottom_toTopOf="@+id/no_store"
            />

        <TextView
            android:id="@+id/no_store_found"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:text="@string/select_store_no_store_message"
            android:visibility="@{viewModel.showNoResults ? View.VISIBLE : View.GONE}"
            android:textColor="@color/textPrimary"
            style="@style/BaseBodyStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search"
            />

        <LinearLayout
            android:id="@+id/no_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:onClick="@{view -> viewModel.onStoreClicked(-1L)}"
            android:background="@color/light_background"
            app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"
                android:layout_gravity="center_vertical"
                android:text="@string/select_store_store_not_found"
                style="@style/TextAppearance.Custom.ListCardDescription"
                />
            <ImageView
                android:id="@+id/selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_gravity="center_vertical"
                android:visibility="@{viewModel.storeNotFoundSelected ? View.VISIBLE : View.INVISIBLE}"
                android:src="@drawable/ic_done"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp"
            android:background="@color/very_light_purple"
            android:animateLayoutChanges="true"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:text="@{viewModel.selectedStore.name}"
                android:visibility="@{viewModel.selectedStore != null ? View.VISIBLE : View.GONE}"
                style="@style/TextAppearance.Custom.MapCardTitle"
                tools:text="Bon SalmÃ³"
                />
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:paddingBottom="4dp"
                bind:store_types="@{viewModel.selectedStore}"
                android:visibility="@{viewModel.selectedStore != null ? View.VISIBLE : View.GONE}"
                style="@style/TextAppearance.Custom.MapCardDescription"
                tools:text="Grocery - Meat and pork"
                />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="16dp"
                android:paddingBottom="4dp"
                android:text="@{viewModel.selectedStore.address}"
                android:visibility="@{viewModel.selectedStore != null ? View.VISIBLE : View.GONE}"
                style="@style/TextAppearance.Custom.ListCardDescription"
                tools:text="Baker street 123"
                />

            <TextView
                android:id="@+id/no_store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:paddingBottom="4dp"
                android:text="@string/select_store_store_not_found_message"
                android:visibility="@{viewModel.storeNotFoundSelected ? View.VISIBLE : View.GONE}"
                android:textColor="@color/textPrimary"
                style="@style/BaseBodyStyle"
                bind:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                bind:layout_constraintStart_toStartOf="parent"
                />

            <Button
                android:id="@+id/select_store_button"
                android:background="@drawable/purple_rounded_bg"
                android:gravity="center"
                bind:textId="@{viewModel.buttonText}"
                android:enabled="@{viewModel.buttonEnabled}"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:onClick="@{view -> viewModel.onButtonClicked()}"
                bind:cornerRadius="@dimen/login_button_corner_radius"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/infoLayout"
                app:layout_constraintEnd_toEndOf="@+id/infoLayout"
                style="@style/LoginActionButton"
                />
        </LinearLayout>

    </androidx.constraintlayout.motion.widget.MotionLayout>

</layout>
