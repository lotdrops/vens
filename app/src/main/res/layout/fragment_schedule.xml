<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
        <import type="hackovid.vens.features.shopprofile.WeekDay" />

        <variable
            name="viewModel"
            type="hackovid.vens.features.shopprofile.ScheduleViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingEnd="8dp"
                    bind:buttonGravity="center_vertical"
                    bind:navigationIcon="@drawable/ic_back_arrow"
                    >

                    <TextView
                        style="@style/TextAppearance.Custom.Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/screen_horizontal_margin"
                        android:layout_marginVertical="16dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/shop_set_schedule_title"
                        />

                </androidx.appcompat.widget.Toolbar>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_monday}"
                        bind:time="@{viewModel.mondaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showMonday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Monday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_tuesday}"
                        bind:time="@{viewModel.tuesdaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showTuesday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Tuesday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_wednesday}"
                        bind:time="@{viewModel.wednesdaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showWednesday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Wednesday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_thursday}"
                        bind:time="@{viewModel.thursdaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showThursday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Thursday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_friday}"
                        bind:time="@{viewModel.fridaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showFriday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Friday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_saturday}"
                        bind:time="@{viewModel.saturdaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showSaturday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Saturday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_sunday}"
                        bind:time="@{viewModel.sundaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showSunday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Sunday)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_holiday_eve}"
                        bind:time="@{viewModel.holidayEveSchedule.getText(context)}"
                        bind:show="@{!viewModel.showHolidayEve}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.HolidayEve)}"
                        />

                    <include
                        layout="@layout/layout_schedule_row"
                        bind:day="@{@string/shop_schedule_days_holiday}"
                        bind:time="@{viewModel.holidaySchedule.getText(context)}"
                        bind:show="@{!viewModel.showHoliday}"
                        bind:onClick="@{v -> viewModel.onEditScheduleDay(WeekDay.Holiday)}"
                        />

                </TableLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:orientation="vertical"
                    android:background="@drawable/purple_rounded_bg"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:animateLayoutChanges="true"
                    android:visibility="@{viewModel.isEditing() ? View.VISIBLE : View.GONE}"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/generic_edit"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="16dp"
                        style="@style/TextAppearance.Custom.Subtitle"
                        />

                    <TextView
                        style="@style/TextAppearance.Custom.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/textPrimary"
                        android:text="@string/shop_schedule_select_days"
                        />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/categories_chipgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        >
                        <com.google.android.material.chip.Chip
                            android:id="@+id/monday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_monday_short"
                            android:visibility="@{viewModel.showMonday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Monday)}"
                            bind:is_selected="@{viewModel.mondayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/tuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_tuesday_short"
                            android:visibility="@{viewModel.showTuesday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Tuesday)}"
                            bind:is_selected="@{viewModel.tuesdayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:id="@+id/wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_wednesday_short"
                            android:visibility="@{viewModel.showWednesday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Wednesday)}"
                            bind:is_selected="@{viewModel.wednesdayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_thursday_short"
                            android:visibility="@{viewModel.showThursday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Thursday)}"
                            bind:is_selected="@{viewModel.thursdayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_friday_short"
                            android:visibility="@{viewModel.showFriday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Friday)}"
                            bind:is_selected="@{viewModel.fridayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_saturday_short"
                            android:visibility="@{viewModel.showSaturday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Saturday)}"
                            bind:is_selected="@{viewModel.saturdayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_sunday_short"
                            android:visibility="@{viewModel.showSunday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Sunday)}"
                            bind:is_selected="@{viewModel.sundayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_holiday_eve"
                            android:visibility="@{viewModel.showHolidayEve ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.HolidayEve)}"
                            bind:is_selected="@{viewModel.holidayEveIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/shop_schedule_days_holiday"
                            android:visibility="@{viewModel.showHoliday ? View.VISIBLE : View.GONE}"
                            android:onClick="@{v -> viewModel.onWeekDayClicked(WeekDay.Holiday)}"
                            bind:is_selected="@{viewModel.holidayIsSelected}"
                            style="@style/Chip.Schedule"
                            />
                    </com.google.android.material.chip.ChipGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        >
                        <TextView
                            style="@style/TextAppearance.Custom.Body"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="16dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/textPrimary"
                            android:text="@string/shop_schedule_time"
                            />
                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="36dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginVertical="8dp"
                            android:layout_gravity="start|center_vertical"
                            android:text="@string/shop_schedule_add_range"
                            android:onClick="@{v -> viewModel.onAddRangeClicked()}"
                            app:cornerRadius="@dimen/button_corner_radius"
                            android:enabled="@{viewModel.timeRangeButtonEnabled}"
                            style="@style/RoundedButton"
                            />
                    </LinearLayout>


                    <TextView
                        style="@style/TextAppearance.Custom.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_info"
                        android:drawablePadding="16dp"
                        android:text="@string/shop_schedule_no_range"
                        android:visibility="@{viewModel.shopEmptyRangesInfo ? View.VISIBLE : View.GONE}"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/time_ranges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="36dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="8dp"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/shop_schedule_range_done"
                        android:onClick="@{v -> viewModel.onDoneClicked()}"
                        app:cornerRadius="@dimen/button_corner_radius"
                        android:enabled="@{viewModel.doneButtonEnabled}"
                        style="@style/RoundedButton"
                        />

                </LinearLayout>

                <TextView
                    style="@style/TextAppearance.Custom.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/screen_horizontal_margin"
                    android:layout_marginVertical="16dp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/ic_info"
                    android:drawablePadding="16dp"
                    android:text="@string/shop_schedule_modify"
                    android:visibility="@{!viewModel.isEditing() ? View.VISIBLE : View.GONE}"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="36dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/generic_save"
                    android:onClick="@{v -> viewModel.onAddRangeClicked()}"
                    app:cornerRadius="@dimen/button_corner_radius"
                    android:visibility="@{!viewModel.isEditing() ? View.VISIBLE : View.GONE}"
                    style="@style/RoundedButton"
                    />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
